<%= javascript_include_tag 'customer_backlog' %>

<table width="100%">
  <tr>
    <td><h1>Released</h1></td>
    <td align="right"><%= submit_tag "Add Backlog Category", :class => "add_category" %></td>
  </tr>
</table>

<div id="category"></div>


<div id="category_entry" style="display: none;">
  <%= label_tag "Backlog category" %>
  <%= text_field_tag "category", "", :id => "category_field" %>
  <%= link_to "save", "/", :id => "save_category" %>
</div>

<div id="backlog_item" style="display: none;">
  <p>
    <%= label_tag "Description" %>
    <%= text_field_tag "description", "", :id => "item_description" %>
  </p>
  <p>
    <%= label_tag "Role" %>
    <%= select_tag "role", "<option>Developer</option>" %>
  </p>
  <p>
    <%= label_tag "Note" %>
    <%= text_area_tag "note" %>
  </p>
</div>
